rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function validateUserDataUpdate(data) {
      // STEP 5: Add size validation to user updates  
      return validateUserSize(data);
    }
    
    function validateUserDataCreate(data) {
      // STEP 1.2 + 5: Add basic field validation + size limits
      return data.name is string && 
             data.name.size() >= 1 && 
             data.name.size() <= 100 &&
             data.isPro is bool &&
             validateUserSize(data);
    }
    
    function validateCustomerData(data) {
      // STEP 2 + 5: Basic customer validation + size limits
      return data.name is string && 
             data.name.size() >= 1 && 
             data.name.size() <= 100 &&
             validateCustomerSize(data);
    }
    
    function validateDebtData(data) {
      // STEP 2 + 5: Basic debt validation + size limits
      return data.customerId is string &&
             data.customerName is string &&
             data.amount is number &&
             data.amount >= 0 &&
             data.status in ['unpaid', 'partial', 'paid'] &&
             validateDebtSize(data);
    }
    
    // STEP 3: Pro tier business logic (HARDENED)
    function isProUser(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.isPro == true;
    }
    
    function underFreeTierLimit(userId) {
      // Free tier limit: 5 customers
      // For security rules, we'll use a more conservative approach
      // Check if user document exists and has totalCustomers field
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      return userDoc.data.keys().hasAll(['totalCustomers']) && 
             userDoc.data.totalCustomers < 5;
    }
    
    // STEP 6: Pro tier caps (ENTERPRISE READY)
    function withinProTierCustomerLimit(userId) {
      // Pro tier limit: 10,000 customers max
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      return userDoc.data.keys().hasAll(['totalCustomers']) && 
             userDoc.data.totalCustomers < 10000;
    }
    
    function withinProTierDebtLimit(userId) {
      // Pro tier limit: 50,000 debts max
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      return userDoc.data.keys().hasAll(['totalDebts']) && 
             userDoc.data.totalDebts < 50000;
    }
    
    function canCreateCustomerWithCaps(userId) {
      // Free tier: under 5 customers
      // Pro tier: under 10,000 customers  
      return (isProUser(userId) && withinProTierCustomerLimit(userId)) || 
             (!isProUser(userId) && underFreeTierLimit(userId));
    }
    
    function canCreateDebt(userId) {
      // Free tier: unlimited debts (but limited by customer count)
      // Pro tier: under 50,000 debts
      return !isProUser(userId) || withinProTierDebtLimit(userId);
    }
    
    // STEP 4: Rate limiting implementation (PRODUCTION READY)
    function isWithinRateLimit(userId, operation) {
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      let now = request.time;
      
      // Get rate limit data from user document
      let rateLimitData = userDoc.data.get('rateLimits', {});
      let operationData = rateLimitData.get(operation, {});
      
      // Rate limits per operation type (requests per minute)
      let customerLimit = 10;  // Max 10 customers per minute
      let debtLimit = 20;      // Max 20 debts per minute  
      let userLimit = 5;       // Max 5 profile updates per minute
      
      let currentLimit = operation == 'customer_create' ? customerLimit :
                        operation == 'debt_create' ? debtLimit :
                        operation == 'user_update' ? userLimit : 1;
      
      // Check if we have recent operation data and validate structure
      return !operationData.keys().hasAll(['lastReset', 'count']) ||
             (now.toMillis() - operationData.lastReset.toMillis()) / 60000 >= 1.0 ||
             operationData.count < currentLimit;
    }
    
    // STEP 5: Document size limits (PRODUCTION READY)
    // Simplified approach: validate individual field sizes instead of total document size
    function validateCustomerSize(data) {
      // Customer documents: Individual field limits
      return (!data.keys().hasAny(['name']) || data.name.size() <= 100) &&
             (!data.keys().hasAny(['phone']) || data.phone.size() <= 20) &&
             (!data.keys().hasAny(['address']) || data.address.size() <= 200) &&
             (!data.keys().hasAny(['notes']) || data.notes.size() <= 500);
    }
    
    function validateDebtSize(data) {
      // Debt documents: Individual field limits
      return (!data.keys().hasAny(['description']) || data.description.size() <= 200) &&
             (!data.keys().hasAny(['notes']) || data.notes.size() <= 300) &&
             (!data.keys().hasAny(['customerName']) || data.customerName.size() <= 100);
    }
    
    function validateUserSize(data) {
      // User documents: Individual field limits (more generous for user profiles)
      return (!data.keys().hasAny(['name']) || data.name.size() <= 100) &&
             (!data.keys().hasAny(['phone']) || data.phone.size() <= 20) &&
             (!data.keys().hasAny(['address']) || data.address.size() <= 200) &&
             (!data.keys().hasAny(['bio']) || data.bio.size() <= 500);
    }
    
    // User documents - STEP 4: Add rate limiting to user operations
    match /users/{userId} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow create: if isAuthenticated() && isOwner(userId) && 
                       validateUserDataCreate(request.resource.data);
      allow update: if isAuthenticated() && isOwner(userId) && 
                       validateUserDataUpdate(request.resource.data) &&
                       isWithinRateLimit(userId, 'user_update');
      allow delete: if false; // Prevent user deletion
      
      // Customer subcollection - STEP 6: Add Pro tier caps to customer creation
      match /customers/{customerId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow create: if isAuthenticated() && isOwner(userId) && 
                         validateCustomerData(request.resource.data) &&
                         canCreateCustomerWithCaps(userId) &&
                         isWithinRateLimit(userId, 'customer_create');
        allow update: if isAuthenticated() && isOwner(userId) && 
                         validateCustomerData(request.resource.data) &&
                         isWithinRateLimit(userId, 'customer_create');
        allow delete: if isAuthenticated() && isOwner(userId);
      }
      
      // Debt subcollection - STEP 6: Add Pro tier caps to debt creation
      match /debts/{debtId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow create: if isAuthenticated() && isOwner(userId) && 
                         validateDebtData(request.resource.data) &&
                         canCreateDebt(userId) &&
                         isWithinRateLimit(userId, 'debt_create');
        allow update: if isAuthenticated() && isOwner(userId) && 
                         validateDebtData(request.resource.data) &&
                         isWithinRateLimit(userId, 'debt_create');
        allow delete: if isAuthenticated() && isOwner(userId);
      }
    }
    
    // Payment requests (only Cloud Functions can write, users can read their own)
    match /paymentRequests/{requestId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      allow create: if false; // Only Cloud Functions can create
      allow update: if false; // Only Cloud Functions can update
      allow delete: if false; // Only Cloud Functions can delete
    }
    
    // Analytics data (only readable by the user who owns it)
    match /analytics/{userId} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if false; // Only Cloud Functions can write analytics
    }
    
    // System configuration (read-only for all authenticated users)
    match /config/{document} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins via Cloud Functions
    }
  }
} 