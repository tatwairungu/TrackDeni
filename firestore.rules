rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function validateUserDataUpdate(data) {
      // For updates, we don't require all fields, just validate what's present
      return (data.name == null || (data.name is string && data.name.size() <= 100 && data.name.size() >= 1)) &&
             (data.isPro == null || data.isPro is bool) &&
             (data.email == null || data.email is string) &&
             (data.phoneNumber == null || data.phoneNumber is string) &&
             (data.photoURL == null || data.photoURL is string) &&
             // Allow both timestamp and serverTimestamp() for lastActive
             (data.lastActive == null || data.lastActive is timestamp || data.lastActive == request.time) &&
             (data.migratedAt == null || data.migratedAt is timestamp || data.migratedAt == request.time) &&
             (data.totalCustomers == null || data.totalCustomers is number) &&
             (data.totalOwed == null || data.totalOwed is number) &&
             (data.totalPaid == null || data.totalPaid is number);
    }
    
    function validateUserDataCreate(data) {
      return data.keys().hasAll(['name', 'isPro', 'joinedAt']) &&
             data.name is string &&
             data.name.size() <= 100 &&
             data.name.size() >= 1 &&
             data.isPro is bool &&
             // Allow both timestamp and serverTimestamp() for joinedAt
             (data.joinedAt is timestamp || data.joinedAt == request.time) &&
             (data.email == null || data.email is string) &&
             (data.phoneNumber == null || data.phoneNumber is string) &&
             (data.photoURL == null || data.photoURL is string) &&
             // Allow both timestamp and serverTimestamp() for lastActive
             (data.lastActive == null || data.lastActive is timestamp || data.lastActive == request.time) &&
             (data.migratedAt == null || data.migratedAt is timestamp || data.migratedAt == request.time) &&
             (data.totalCustomers == null || data.totalCustomers is number) &&
             (data.totalOwed == null || data.totalOwed is number) &&
             (data.totalPaid == null || data.totalPaid is number);
    }
    
    function validateCustomerData(data) {
      return data.keys().hasAll(['name', 'createdAt']) &&
             data.name is string &&
             data.name.size() <= 100 &&
             data.name.size() >= 1 &&
             // Allow both timestamp and serverTimestamp() for createdAt
             (data.createdAt is timestamp || data.createdAt == request.time) &&
             (data.phone == null || data.phone is string) &&
             (data.phoneNumber == null || data.phoneNumber is string) &&
             (data.totalOwed == null || data.totalOwed is number) &&
             (data.totalPaid == null || data.totalPaid is number) &&
             (data.activeDebts == null || data.activeDebts is number) &&
             (data.status == null || data.status is string) &&
             (data.lastPaymentDate == null || data.lastPaymentDate is timestamp || data.lastPaymentDate == request.time) &&
             (data.migratedAt == null || data.migratedAt is timestamp || data.migratedAt == request.time);
    }
    
    function validateDebtData(data) {
      return data.keys().hasAll(['customerId', 'amount', 'status', 'createdAt']) &&
             data.customerId is string &&
             data.customerName is string &&
             data.amount is number &&
             data.amount >= 0 &&
             data.status in ['unpaid', 'partial', 'paid'] &&
             // Allow both timestamp and serverTimestamp() for createdAt
             (data.createdAt is timestamp || data.createdAt == request.time) &&
             (data.reason == null || data.reason is string) &&
             (data.dueDate == null || data.dueDate is timestamp || data.dueDate == request.time) &&
             (data.dateBorrowed == null || data.dateBorrowed is timestamp || data.dateBorrowed == request.time) &&
             (data.migratedAt == null || data.migratedAt is timestamp || data.migratedAt == request.time) &&
             (data.payments == null || data.payments is list);
    }
    
    // Rate limiting helper (basic implementation)
    function isWithinRateLimit() {
      // In a real implementation, you'd use a more sophisticated rate limiting
      // For now, we'll allow all authenticated requests
      return isAuthenticated();
    }
    
    // User documents - TEMPORARILY VERY PERMISSIVE FOR DEBUGGING
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      
      // Customer subcollection - TEMPORARILY VERY PERMISSIVE
      match /customers/{customerId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      
      // Debt subcollection - TEMPORARILY VERY PERMISSIVE
      match /debts/{debtId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }
    
    // Payment requests (only Cloud Functions can write, users can read their own)
    match /paymentRequests/{requestId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      allow create: if false; // Only Cloud Functions can create
      allow update: if false; // Only Cloud Functions can update
      allow delete: if false; // Only Cloud Functions can delete
    }
    
    // Analytics data (only readable by the user who owns it)
    match /analytics/{userId} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if false; // Only Cloud Functions can write analytics
    }
    
    // System configuration (read-only for all authenticated users)
    match /config/{document} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins via Cloud Functions
    }
  }
} 